#!/bin/bash
echo -e "Create 3 Partitions:"
echo -e ""
echo -e "1 efi ~600M"
echo -e "1 swap ~4-8G"
echo -e "1 linux filesystem"
echo -e ""
echo -e "Run:"
echo -e ">> lsblk <<"
echo -e "cfdisk /dev/sda"
echo -e ""
echo -e "replace /dev/sda with your target disk."
echo -e ""
echo -e "u should have 3 partitions now like:"
echo -e "/dev/sda1 for your efi"
echo -e "/dev/sda2 for your swap"
echo -e "/dev/sda3 for your filesystem"
